{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2019",                         // Reasonable modern baseline for Node 16+
    "module": "commonjs",                       // Works well for Node.js; can override via bundler
    "lib": ["ES2020", "DOM"],                   // Supports Promise, fetch, URL, etc.
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Interop */
    "allowSyntheticDefaultImports": true,

    /* Output */
    "types": ["node"],
    "resolveJsonModule": true                   // Optional: useful for reading JSON
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
