{
  "name": "fintava-pay",
  "version": "1.0.3",
  "description": "JavaScript SDK for Fintava Pay - secure client and server integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a-short-dev/fintava/"
  },
  "keywords": [
    "fintava",
    "payment",
    "gateway",
    "sdk",
    "client",
    "server",
    "typescript"
  ],
  "author": "Oluwaleke Abiodun <you@example.com>", 
  "license": "MIT", 
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "version:patch": "changeset version --snapshot patch && pnpm install",
    "version:minor": "changeset version --snapshot minor && pnpm install",
    "version:major": "changeset version --snapshot major && pnpm install",
    "release": "changeset publish",
    "release:patch": "pnpm version:patch && pnpm build && pnpm release",
    "release:minor": "pnpm version:minor && pnpm build && pnpm release",
    "release:major": "pnpm version:major && pnpm build && pnpm release"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.6",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^4.21.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@8.15.4"
}
