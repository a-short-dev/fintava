{
    "name": "@fintava/monorepo",
    "version": "1.0.3",
    "description": "Fintava Pay SDKs - Multi-platform client libraries for payment integration",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/a-short-dev/fintava.git"
    },
    "keywords": [
        "fintava",
        "payment",
        "gateway",
        "sdk",
        "monorepo",
        "multi-platform"
    ],
    "author": "Oluwaleke Abiodun <you@example.com>",
    "license": "MIT",
    "scripts": {
        "build": "pnpm -r build",
        "dev": "pnpm -r --parallel dev",
        "test": "pnpm -r test",
        "test:watch": "pnpm -r --parallel test:watch",
        "test:coverage": "pnpm -r test:coverage",
        "lint": "pnpm -r lint",
        "lint:fix": "pnpm -r lint:fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "pnpm -r type-check",
        "clean": "pnpm -r clean && rm -rf node_modules/.cache",
        "clean:all": "pnpm -r clean && rm -rf node_modules packages/*/node_modules",
        "changeset": "changeset",
        "changeset:version": "changeset version",
        "version:patch": "changeset version --snapshot patch && pnpm install",
        "version:minor": "changeset version --snapshot minor && pnpm install",
        "version:major": "changeset version --snapshot major && pnpm install",
        "release": "pnpm build && changeset publish",
        "release:patch": "pnpm version:patch && pnpm release",
        "release:minor": "pnpm version:minor && pnpm release",
        "release:major": "pnpm version:major && pnpm release",
        "js:build": "pnpm --filter fintava build",
        "js:dev": "pnpm --filter fintava dev",
        "js:test": "pnpm --filter fintava test"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.9",
        "prettier": "^3.3.3",
        "typescript": "^5.6.3"
    },
    "engines": {
        "node": ">=16",
        "pnpm": ">=9"
    },
    "packageManager": "pnpm@10.12.4"
}